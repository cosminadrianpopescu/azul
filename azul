    if [ $? == 0 ]
    then
        if [ -S /tmp/azul/$AZUL_SESSION ]
        then
            rm /tmp/azul/$AZUL_SESSION
        fi
        setsid $AZUL_NVIM_EXE --listen /tmp/azul/$AZUL_SESSION --headless >/dev/null 2>&1 0< /dev/null &!
    fi

    sleep 0.2
    check_file=/tmp/azul/$AZUL_SESSION-session
    echo $AZUL_SESSION > $check_file

    while [ -e $check_file ]
    do
        rm $check_file
        $AZUL_NVIM_EXE --server /tmp/azul/$AZUL_SESSION --remote-ui
        check_file=/tmp/azul/$AZUL_SESSION-session
        if [ -e $check_file ]
        then
            export AZUL_SESSION=`cat $check_file`
        fi
    done

